<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.user.dao.User3DAO">

	<insert id="insertUser3">
		INSERT INTO `user3` VALUES (#{uid}, #{name}, #{hp}, #{age});
	</insert>
	
	<select id="selectUser3" resultType="kr.co.user.vo.User3VO">
	select * from `user3` where `uid` = #{uid};
	</select>
		
	<select id="selectUser3s" resultType="kr.co.user.vo.User3VO">
		select * from `user3`;
	</select>
	
	<update id="updateUser3">
		update `user3` set
				`name`=#{name},
				`hp`=#{hp},
				`age`=#{age}
		where 
				`uid`=#{uid};
	</update>
	<delete id="deleteUser3">
		delete from `user3` where `uid`=#{uid};
	</delete>
</mapper>