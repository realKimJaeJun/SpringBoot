<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.ch10.dao.User1DAO">
	<insert id="insertUser1">
		INSERT INTO `user1` VALUES (#{uid}, #{pass}, #{name}, #{hp}, #{age});
	</insert>
	<select id="selectUser1" resultType="kr.co.ch10.vo.User1VO">
		select * from `user1` where `uid`=#{uid};
	</select>
	<select id="selectUser1s" resultType="kr.co.ch10.vo.User1VO">
		select * from `user1`;
	</select>
	<update id="updateUser1">
		update `user1` set
			`name`=#{name},
			`hp`=#{hp},
			`age`=#{age}
		where
			`uid`=#{uid};		
	</update>
	<delete id="deleteUser1">
		delete from `user1` where `uid`=#{uid};
	</delete>
</mapper>